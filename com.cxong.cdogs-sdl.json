{
  "app-id": "com.cxong.cdogs-sdl",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "19.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "cdogs-sdl",
  "rename-icon": "cdogs-sdl",
  "rename-appdata": "cdogs-sdl",
  "rename-desktop-file": "cdogs-sdl.desktop",
  "rename-appdata-file": "cdogs-sdl.appdata.xml",
  "finish-args": [
      "--device=dri",
      "--share=ipc",
      "--socket=pulseaudio",
      "--socket=wayland",
      "--socket=x11"
  ],
  "modules": [
      {
          "name": "cdogs-sdl",
          "buildsystem": "cmake-ninja",
              "config-opts": [
                  "-DDATA_INSTALL_DIR=/app/share/cdogs/",
                  "-DCDOGS_DATA_DIR=/app/share/cdogs/"
          ],
          "sources": [
              {
                  "type": "git",
                  "url": "https://github.com/cxong/cdogs-sdl.git",
                  "commit": "fd988bae79d08bfbb2134485a9873952fb7aa37e",
                  "tag": "0.7.0"
              }
          ]
      }
  ]
}
